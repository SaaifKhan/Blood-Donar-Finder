<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbarProfileDetail"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/backBtnProfileDetail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_arrow_back_ios_"
            app:tint="@android:color/black" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_call"
            app:tint="@android:color/black" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@+id/toolbarProfileDetail"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarProfileDetail">


        <RelativeLayout
            android:id="@+id/relativeMainBody2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativeMainBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="18dp"
                android:visibility="visible">


                <LinearLayout
                    android:id="@+id/LinearDonate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/relative2"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvdonateProfileDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/days_one"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="@android:color/black"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/tvNumofDonateProfileDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_alternates"
                        android:text="Donate Request"
                        android:textSize="8sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearDonar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_toEndOf="@id/relative2"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/tvDonorProfileDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/days_one"
                        android:text="20"
                        android:textColor="@android:color/black"
                        android:textSize="23sp" />


                    <TextView
                        android:id="@+id/NumofDonorProfileDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_alternates"
                        android:text="Donar Request"
                        android:textSize="8sp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/relative2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImgProfileDetails"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/ic_baseline_person"
                        app:civ_border_color="@android:color/black"
                        app:civ_border_width="0.5dp" />

                    <TextView
                        android:id="@+id/bloodGroupProfileDetail"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/circleprofileimage"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="A+"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:visibility="gone" />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/LinearNameProfileDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relative2"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp">


                    <TextView
                        android:id="@+id/Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="May Miller"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/lastTimeDonate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Last time Donate"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:id="@+id/RlBloodGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/LinearNameProfileDetail">


                        <TextView
                            android:id="@+id/tvSingup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_light"
                            android:text="Blood Group :"
                            android:textSize="10sp" />


                        <TextView
                            android:id="@+id/bloodgrpTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toEndOf="@id/tvSingup"
                            android:fontFamily="@font/poppins_bold"
                            android:text="A+"
                            android:textColor="@color/colorPrimary"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </LinearLayout>


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_below="@+id/relativeMainBody"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabProfileDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/relativeMainBody"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                app:tabGravity="fill"
                app:tabIndicatorColor="@android:color/black"
                app:tabIndicatorFullWidth="false"
                app:tabSelectedTextColor="@android:color/black"
                app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
                app:tabTextColor="#afafaf" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tabProfileDetail" />
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>


