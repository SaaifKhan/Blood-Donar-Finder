<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.authentication.forgotpassword.ForgotFragment">

    <RelativeLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp">


        <ImageView
            android:id="@+id/forgotClose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:paddingStart="30dp"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_back_ios_" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/toolBar">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp">


            <TextView
                android:id="@+id/tvforgotpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Forgot Passowrd"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/typeyourEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvforgotpass"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Email "
                android:textSize="15sp" />

            <EditText
                android:id="@+id/ed_name_forgotPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/typeyourEmail"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle"
                android:drawableRight="@drawable/ic_baseline_email"
                android:fontFamily="@font/poppins"
                android:hint="abc@gmail.com"
                android:inputType="textEmailAddress"
                android:paddingStart="15dp"
                android:paddingEnd="15dp" />


            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/Submitripple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ed_name_forgotPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:mrl_rippleColor="#A6000000">

                <TextView
                    android:id="@+id/btnforgotpassword"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/ed_name_forgotPassword"
                    android:layout_margin="8dp"
                    android:background="@drawable/btn_bckground"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="submit"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

            </com.balysv.materialripple.MaterialRippleLayout>


            <RelativeLayout
                android:id="@+id/RelativeSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Submitripple"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">


                <TextView
                    android:id="@+id/tvhaveaccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:text="Have a Account?"
                    android:textSize="15sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@id/tvhaveaccount"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Sign In"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/RelativeSignIn" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>



